{% extends "_base.njk" %}

{% set thispage = 'newsletters' %}

{% macro nextprev() %}
	<div class="controls">
		<a{% if adjs[0] %} href="/newsletters/{{ adjs[0] }}"{% endif %}><button class="rel" {{ 'disabled' if not adjs[0] }}><span class="buttonicon" id="flipped">&#x279C;</span><span class="buttontext">Previous</span></button></a>
		<a href="/newsletters/{{ 'random' if (adjs[0] or adjs[1]) else '' }}"><button class="rel" {{ 'disabled' if not (adjs[0] or adjs[1]) }}><span class="buttonicon" id="random"><i class="fas fa-random"></i></span><span class="buttontext">Random</span></button></a>
		<a{% if adjs[1] %} href="/newsletters/{{ adjs[1] }}"{% endif %}><button class="rel" {{ 'disabled' if not adjs[1] }}><span class="buttonicon">&#x279C;</span><span class="buttontext">Next</span></button></a>
	</div>
{% endmacro %}

{% block pagecontent %}
	{{ nextprev() }}
	{% block article %}
		<div class="faded">This article hasn't been published yet - stay tuned!</div>
	{% endblock %}
	{{ nextprev() }}
{% endblock %}

{% block customcss %}
	<style>
		div.controls {
			padding: 20px;
			display: flex;
			width: 400px;
			margin: 0px auto;
			justify-content: space-between;
		}

		span.buttontext {
			display: block;
		}

		.buttonicon {
			display: none;
		}

		span#flipped {
			transform: scale(-1);
			filter: flipH;
			-ms-filter: flipH;
		}

		button.rel {
			width: 100px;
			height: 30px;
			background-color: var(--medium-gray);
			color: var(--off-white);
			border: 2px solid var(--ghost-gray);
			border-radius: 5px;
			cursor: pointer;
		}

		button.rel:disabled {
			background-color: var(--tinted-gray);
			border: 1px solid var(--gray);
			color: var(--ghost-gray);
			cursor: default;
		}

		button.rel:hover {
			background-color: var(--middle-gray);
		}

		@media (max-width: 500px) {
			div.controls {
				width: 200px;
			}

			span.buttontext {
				display: none;
			}

			.buttonicon {
				display: block;
			}

			button.rel {
				width: 50px;
			}
		}
	</style>
	{% block lettercss %}{% endblock %}
{% endblock %}

{% block customjs %}
	<script src="https://kit.fontawesome.com/dbc840a846.js" crossorigin="anonymous"></script>
	{% block letterjs %}{% endblock %}
{% endblock %}