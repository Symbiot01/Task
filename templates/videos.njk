{% extends "_base.njk" %}

{% set thispage = 'videos' %}
{% set pagetitle = 'Videos' %}

{% block pagecontent %}
	<div class="text">Check out our video content here or on <a href="https://www.youtube.com/channel/UCVYGmPrKHFPKKzO0lb-XM_Q" class="link" target="_blank">YouTube</a>!</div>
	<div class="vid-wrapper">
		<div class="youtube-videos">
			{% for vid in youtubeVids %}
				<div class="youtube-vid">{{ vid.show | safe }}</div>
			{% endfor %}
		</div>
		<div class="insta-videos"></div>
	</div>
{% endblock %}

{% block customcss %}
	<style>
		.link {
			color: var(--off-white);
		}
		.youtube-videos {
			display: inline-flex;
			width: 100%;
			flex-wrap: wrap;
			justify-content: space-around;
		}
		.youtube-vid {
			height: 280px;
			width: 512px;
			border: 2px solid var(--light-gray);
			border-radius: 5px;
			margin: 40px;
		}
	</style>
{% endblock %}