{% extends '_base.njk' %}

{% set thispage = 'events' %}
{% set pagetitle = 'Prizes' %}

{% block pagecontent %}
	<h1>Prizes</h1><br/>
	{%for name,list in prizes%}
		<div class="name">
			<h2>{{name}}</h2>
			<div id="prizes-container">
				{% for prize in list %}
					<div class="prize-container">
						<img class="prize-image" src="{{ prize.link }}" alt="{{ prize.name }}"/>
						<div class="prize-name">{{ prize.name }}</div>
						<div class="prize-points">{{ prize.cost }} points</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{%endfor%}
{% endblock %}

{% block customcss %}
	<style>
		.name{
			height: 350px;
		}
		#prizes-container {
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: center;
			margin: 0% 10%;
			border-radius: 10px;
			background-color: var(--tinted-gray);
			height: 90%;
		}

		.prize-container {
			display: flex;
			flex-direction: column;
			justify-content: center;
			margin: 10px;
			height: 100%;
			overflow: hidden;
		}

		.prize-image {
			display: block;
			min-width: 80px;
			min-height: 80px;
			max-height: 120px;
			margin: 5px;
		}
	</style>
{% endblock %}